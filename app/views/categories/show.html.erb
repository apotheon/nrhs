<% if admin_signed_in? %>
  <%= link_to 'Edit Category', edit_category_path(@category) %>
  <%= link_to 'Delete Category', category_path(@category), method: :delete %>
<% end %>

<h2><%= @category.name %></h2>

<%= @category.body %>

<ul>
  <% @category.sorted_pages.each do |page| %>
    <li><%= link_to page.title, page_path(page) %></li>
  <% end %>
</ul>
